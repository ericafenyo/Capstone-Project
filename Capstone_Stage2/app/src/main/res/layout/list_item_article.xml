<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="232dp"
    android:layout_marginEnd="@dimen/margin_padding_small"
    android:layout_marginStart="@dimen/margin_padding_small"
    android:layout_marginTop="@dimen/margin_padding_small">

    <FrameLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/iv_article_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/accessibility_thumbnail"
            android:scaleType="centerCrop"
            tools:src="@drawable/business" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_tint"
            android:foreground="?selectableItemBackground" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_article_source"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_padding_small"
                android:layout_marginStart="@dimen/margin_padding_small"
                android:contentDescription="@string/accessibility_source"
                android:textColor="@color/colorWhite" />

            <TextView
                android:id="@+id/tv_article_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_padding_small"
                android:layout_marginStart="@dimen/margin_padding_small"
                android:contentDescription="@string/accessibility_source"
                android:textColor="@color/colorWhite" />

            <TextView
                android:id="@+id/tv_article_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_padding_small"
                android:layout_marginEnd="@dimen/margin_padding_small"
                android:layout_marginStart="@dimen/margin_padding_small"
                android:layout_marginTop="@dimen/margin_padding_xsmall"
                android:contentDescription="@string/accessibility_title"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/colorWhite" />
        </LinearLayout>

    </FrameLayout>

</android.support.v7.widget.CardView>